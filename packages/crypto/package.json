{
  "name": "@haqqjs/crypto",
  "version": "1.0.1",
  "description": "Cryptography resources for blockchain projects",
  "contributors": [
    "IOV SAS <admin@iov.one>",
    "Simon Warta"
  ],
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/haqq-network/haqqjs/tree/main/packages/crypto"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://npm.haqq.sh"
  },
  "scripts": {
    "docs": "typedoc --options typedoc.js",
    "lint": "eslint --max-warnings 0 \"./**/*.ts\"",
    "lint-fix": "eslint --fix --max-warnings 0 \"./**/*.ts\"",
    "format": "prettier --write --loglevel warn '**/*.{ts,js,tsx,jsx,cjs,mjs}'",
    "format-text": "prettier --write \"./*.md\"",
    "test-node": "yarn node jasmine-testrunner.js",
    "test-edge": "yarn pack-web && karma start --single-run --browsers Edge",
    "test-firefox": "yarn pack-web && karma start --single-run --browsers Firefox",
    "test-chrome": "yarn pack-web && karma start --single-run --browsers ChromeHeadless",
    "test-safari": "yarn pack-web && karma start --single-run --browsers Safari",
    "test": "yarn build-or-skip && yarn test-node",
    "coverage": "nyc --reporter=text --reporter=lcov yarn test --quiet",
    "build": "rm -rf ./build && tsc",
    "build-or-skip": "[ -n \"$SKIP_BUILD\" ] || yarn build",
    "pack-web": "yarn build-or-skip && webpack --mode development --config webpack.web.config.js"
  },
  "dependencies": {
    "@haqqjs/encoding": "workspace:^",
    "@haqqjs/math": "workspace:^",
    "@haqqjs/utils": "workspace:^",
    "@noble/hashes": "^1.4.0",
    "bn.js": "^5.2.1",
    "elliptic": "^6.5.5",
    "libsodium-wrappers-sumo": "^0.7.13"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bn.js": "^5.1.5",
    "@types/elliptic": "^6.4.18",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/jasmine": "^4.6.4",
    "@types/karma-firefox-launcher": "^2.1.4",
    "@types/karma-jasmine": "^4.0.5",
    "@types/karma-jasmine-html-reporter": "^1.7.3",
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/node": "^18.19.28",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "buffer": "^6.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "esm": "^3.2.25",
    "glob": "10.3.12",
    "jasmine": "^4.6.0",
    "jasmine-spec-reporter": "^6.0.0",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.3",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "nyc": "^15.1.0",
    "prettier": "2.8.8",
    "ses": "^0.11.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^8.10.2",
    "typedoc": "^0.22.18",
    "typescript": "4.9.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^4.10.0"
  }
}
